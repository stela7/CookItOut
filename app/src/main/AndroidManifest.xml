<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="the_fangovvers.cookitout">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pokus"
        android:supportsRtl="true"
        android:theme="@style/CioTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.AddRecipeActivity" />
        <activity android:name=".activities.RecipeListActivity" />

        <activity
            android:name=".activities.CategoryActivity"
            android:label="@string/title_activity_category" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.CreditsActivity" />
        <!-- <activity android:name=".activities.BaseActivity"></activity> -->
        <activity android:name=".activities.BasketActivity"
            android:label="@string/basket"/>
        <activity android:name=".activities.CategoryInfoActivity" />
        <activity android:name=".activities.RecipeInfoActivity" />
        <activity android:name=".activities.AboutActivity"
            android:label="About"/>
    </application>

</manifest>